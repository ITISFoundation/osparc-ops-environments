version: "3.8"
services:
  {{STACK_NAME}}-deployment-agent:
    image: {{DOCKER_REGISTRY}}/deployment-agent:0.11.2
    init: true
    ports:
      - "8888"
    configs:
      - source: {{STACK_NAME}}_{{PREFIX_STACK_NAME}}_deployment_config
        target: /home/scu/config-prod.yaml
      - source: {{STACK_NAME}}_{{PREFIX_STACK_NAME}}_create_stack
        target: /home/scu/startup_script.bash
        mode: 0555
    networks:
      - portainer_agent_network
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock
    env_file:
      - .env
    deploy:
      mode: replicated
      replicas: 1
      placement:
        constraints: [node.role == manager]
networks:
  portainer_agent_network:
    external: true

configs:
  {{STACK_NAME}}_{{PREFIX_STACK_NAME}}_deployment_config:
    file: ./{{DEPLOYMENT_AGENT_CONFIG}}
  {{STACK_NAME}}_{{PREFIX_STACK_NAME}}_create_stack:
    file: ./startup_script.bash
